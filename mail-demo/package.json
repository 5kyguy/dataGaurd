{
  "name": "mail-demo",
  "version": "1.0.0",
  "description": "Simple email demo inbox for DataGuard project testing",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && cp src/*.css dist/",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "serve": "npx http-server src -p 3000 -o",
    "dev-server": "tsc && cp src/*.css dist/ && node dist/server.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "express": "^4.18.0",
    "@types/express": "^4.17.0"
  },
  "license": "MIT"
}
