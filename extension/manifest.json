{
  "manifest_version": 3,
  "name": "DataGuard",
  "version": "1.0.0",
  "description": "Privacy-preserving email data access with zero-knowledge proofs",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "dist/popup.html",
    "default_title": "DataGuard"
  },
  "icons": {
    "16": "dist/icon16.png",
    "32": "dist/icon32.png",
    "48": "dist/icon48.png",
    "128": "dist/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
